{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [ "./src/ui/*" ],
      "@/*": [ "./src/ui/*" ],
      "@@/*": [ "./*" ],
      "~~/*": [ "./*" ],
      "@domain/*": [ "./src/domain/*" ],
      "@application/*": [ "./src/application/*" ],
      "@infrastructure/*": [ "./src/infrastructure/*" ],
      "@ui/*": [ "./src/ui/*" ]
    },
    "types": [
      "jest",
      "@types/node",
      "@nuxt/types"
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
