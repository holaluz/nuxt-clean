{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@@/*": ["./*"],
      "~~/*": ["./*"],
      "@modules/*": ["./src/modules/*"],
      "@shared/*": ["./src/shared/*"],
      "@ui/*": ["./src/ui/*"]
    },
    "types": ["jest", "node", "@nuxt/types", "vee-validate", "nuxt-i18n"]
  },
  "include": ["src/**/*", "./jest.setup.ts"],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
