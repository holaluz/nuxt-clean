{
  "name": "nuxt-clean",
  "version": "1.0.0",
  "description": "My pioneering Nuxt.js project",
  "author": "Adri√† Fontcuberta",
  "private": true,
  "scripts": {
    "nuxt:dev": "nuxt src/ui --tsconfig . --port 3000",
    "nuxt:build": "nuxt build src/ui --tsconfig .",
    "nuxt:start": "nuxt start src/ui --tsconfig .",
    "nuxt:generate": "nuxt generate src/ui --tsconfig .",
    "start": "npm run nuxt:dev",
    "lint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
    "lint:css": "stylelint src/**/*.{vue,css}",
    "format": "prettier '**/*.{js,ts,vue}' --write && stylelint '**/*.{css,vue}' --fix",
    "test": "jest --maxWorkers=1",
    "test:watch": "npm run test -- --watch",
    "test:e2e:dev": "cypress open",
    "test:e2e:run": "cypress run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  },
  "dependencies": {
    "@holaluz/margarita": "^8.9.1",
    "axios": "^0.21.1",
    "nuxt": "^2.15.3",
    "nuxt-i18n": "^6.21.1",
    "vee-validate": "^3.4.5"
  },
  "devDependencies": {
    "@holaluz/npm-scripts": "^5.5.1",
    "@nuxt/types": "^2.15.3",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config-typescript": "^6.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@testing-library/cypress": "^7.0.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/user-event": "^13.0.6",
    "@testing-library/vue": "^5.6.1",
    "@types/cypress-cucumber-preprocessor": "^4.0.0",
    "@types/jest": "^26.0.21",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "cypress": "^6.8.0",
    "cypress-cucumber-preprocessor": "^4.0.1",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-testing-library": "^3.10.1",
    "eslint-plugin-vue": "^7.7.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-transform-stub": "^2.0.0",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.4",
    "lodash.merge": "^4.6.2",
    "prettier": "^2.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-prettier": "^1.2.0",
    "ts-jest": "^26.5.4",
    "vue-jest": "^4.0.0-rc.1"
  }
}
